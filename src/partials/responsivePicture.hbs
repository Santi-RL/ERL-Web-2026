{{#with @hash as |opts|}}
  {{#with (lookup (default opts.images images) opts.image) as |img|}}
    {{#if img}}
      <picture>
        {{#if img.formats.avif}}
          <source type="image/avif" srcset="{{srcset img.formats.avif}}" sizes="{{default opts.sizes "100vw"}}">
        {{/if}}
        {{#if img.formats.webp}}
          <source type="image/webp" srcset="{{srcset img.formats.webp}}" sizes="{{default opts.sizes "100vw"}}">
        {{/if}}
        <img
          src="{{fallbackSrc img.formats.jpg}}"
          alt="{{default opts.alt img.alt}}"
          class="{{opts.class}}"
          loading="{{default opts.loading "lazy"}}"
          decoding="async"
          width="{{img.width}}"
          height="{{img.height}}"
        >
      </picture>
    {{else}}
      <!-- Imagen {{opts.image}} no encontrada en el manifiesto -->
    {{/if}}
  {{/with}}
{{/with}}
